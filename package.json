{
    "name": "screen-glitch",
    "version": "1.0.1",
    "description": "A React component that applies a realistic glitch effect to the entire DOM.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
      "dist",
      "src/assets"
    ],
    "scripts": {
      "build": "tsc",
      "postbuild": "cpx \"src/**/*.{css,png,gif}\" dist && cpx \"src/assets/*.gif\" dist/assets"
    },
    "keywords": [
      "react",
      "component",
      "glitch",
      "effect",
      "typescript",
      "dom"
    ],
    "author": "Yitz Shapiro",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/yitzshapiro/screen-glitch"
    },
    "peerDependencies": {
      "react": ">=16.8.0"
    },
    "devDependencies": {
      "@types/react": "^18.0.0",
      "cpx": "^1.5.0",
      "typescript": "^4.0.0"
    }
  }
