{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "ES5",
      "module": "ESNext",
      "lib": ["dom", "es6"],
      "jsx": "react",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
  }
  